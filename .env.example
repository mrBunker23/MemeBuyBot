# Chave privada da wallet Solana (formato base58)
PRIVATE_KEY=your_private_key_here

# API Key do Jupiter
JUP_API_KEY=your_jupiter_api_key_here

# RPC URL (opcional, padrão: https://api.mainnet-beta.solana.com)
RPC_URL=https://api.mainnet-beta.solana.com

# Quantidade de SOL por compra (padrão: 0.10)
AMOUNT_SOL=0.10

# Slippage em basis points (padrão: 300 = 3%)
SLIPPAGE_BPS=300

# Intervalo de checagem do site em ms (padrão: 2000)
CHECK_INTERVAL_MS=2000

# Intervalo de checagem de preço em segundos (padrão: 10)
PRICE_CHECK_SECONDS=10

# Modo headless do Puppeteer (padrão: true)
HEADLESS=true

# ============================
# CONFIGURAÇÃO DE TAKE PROFIT
# ============================
# Formato: Multiple (quanto o token precisa multiplicar) e Sell Percent (% para vender)
# Sell Percent: 50 = vende metade, 100 = vende tudo

# TP1: Primeiro Take Profit (padrão: 2x, vende 50%)
TP1_MULTIPLE=2
TP1_SELL_PERCENT=50

# TP2: Segundo Take Profit (padrão: 5x, vende 50%)
TP2_MULTIPLE=5
TP2_SELL_PERCENT=50

# TP3: Terceiro Take Profit (padrão: 10x, vende 50%)
TP3_MULTIPLE=10
TP3_SELL_PERCENT=50

# TP4: Quarto Take Profit (padrão: 20x, vende 100%)
TP4_MULTIPLE=20
TP4_SELL_PERCENT=100
